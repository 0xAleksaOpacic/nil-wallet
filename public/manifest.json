{
  "manifest_version": 3,
  "name": "=nil; Extension",
  "version": "1.0",
  "description": "A simple crypto wallet extension for =nil;",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "./icons/logo.png",
    "48": "./icons/logo.png",
    "128": "./icons/logo.png"
  },
  "host_permissions": [
    "http://localhost/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost/*"]
  }
}
